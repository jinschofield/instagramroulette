{
  "manifest_version": 3,
  "name": "Insta Saver (Test â†” Live)",
  "version": "1.0",
  "description": "Toggle between downloading JSON locally or sending via WebSocket",
  "permissions": [
    "storage",
    "downloads",
    "tabs",
    "webNavigation"
  ],
  "host_permissions": [
    "https://*.instagram.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html"
  },
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'; connect-src ws://localhost:8080"
  }
}
